{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "outDir": "lib/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts"
  ]
}